{
  "name": "network-switch",
  "version": "1.0.0",
  "description": "桌面浮窗：一键切换内外网网卡状态",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --config.win.sign=false"
  },
  "author": "fbz",
  "license": "MIT",
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "is-elevated": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.fbz.networkswitch",
    "productName": "内外网切换器",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "config.json"
    ],
    "extraFiles": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true
    }
  }
}
